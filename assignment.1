class CheckList:
    To_Do_List=[]

    def Add_To_ToDoList(self):
       Activity=input("Enter your today's task...")
       self.To_Do_List.append(Activity)
       print(f"Task '{Activity}' added to list...")  #functions performs adding task removing task and displaying list

    def Remove_From_ToDoList(self):
        try:
          Remove=int(input("Enter Task number..."))
          self.To_Do_List.pop(Remove)
        except ValueError:
          print("Invalid Task Number...")
        except IndexError:
          print("Task Number is not present in To_Do_List...")

    def Display_ToDoList(self):
        if len(self.To_Do_List) != 0:
            for i, task in enumerate(self.To_Do_List):
                print(f"#{i}. {task}")
        else:
            print("No Activities present in the To_Do_List...")
        

